pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Clonage du dépôt Git
                git branch: 'master', url: 'https://github.com/votrerepo/java-project.git'
            }
        }
        stage('Build') {
            steps {
                // Compilation du projet avec Maven
                sh 'mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                // Exécution des tests
                sh 'mvn test'
            }
        }
    }
    post {
        always {
            // Nettoyage du répertoire target
            sh 'mvn clean'
        }
    }
}
